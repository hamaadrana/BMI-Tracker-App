
    <h3>Members</h3>
    {{#each members}}
        <div class="card bg-light text-dark">
        <div class="card-body">
            <b>Name: </b> {{firstName}} {{lastName}} <br> <b>Email:</b> {{email}} <br> <b>Height:</b> {{height}}
            <br>
            <a  href="/deleteUser/{{id}}"><button class="btn btn-danger">Delete Member</button></a>

        </div>

            <a href="/playlist/{{id}}" class="ui icon button">
                <i style="color: cornflowerblue">View Assessments</i>
            </a>

        </div>
        <hr>
    {{/each}}

