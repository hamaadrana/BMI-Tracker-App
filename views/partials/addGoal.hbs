<form class="ui stacked segment form" action="/user/{{user.id}}/addGoal" method="POST">

    <h4>Measurements</h4>
    <hr>
    <div class="row">

        <div class="col-md-4">
            <div class="field">
                <label>Weight</label>
                <input placeholder="00.00 kg" type="text" name="weight">
            </div>
            <div class="field">
                <label>Upper Arm</label>
                <input placeholder="00.00 cm" type="text" name="upper_arm">
            </div>
            <hr>
            <div class="field">
                <h4>Date </h4>
                <input type="Date" name="date">
            </div>
        </div>
        <div class="col-md-4">
            <div class="field">
                <label>Chest</label>
                <input placeholder="00.00 cm" type="text" name="chest">
            </div>
            <div class="field">
                <label>Waist</label>
                <input placeholder="00.00 cm" type="text" name="waist">
            </div>
        </div>
        <div class="col-md-4">
            <div class="field">
                <label>Thigh</label>
                <input placeholder="00.00 cm" type="text" name="thigh">
            </div>

            <div class="field">
                <label>Hips</label>
                <input placeholder="00.00 cm" type="text" name="hips">
            </div>
        </div>
    </div>
