{{> menu id="profile"}}
<section class="ui segment">


<form class="ui stacked form" action="/update-user" method="POST">
        <h3 class="ui header">Update Profile</h3>
        <div class="two fields">
            <div class="field">
                <label>First Name</label>
                <input value="{{user.firstName}}" type="text"  name="firstName">
            </div>
            <div class="field">
                <label>Last Name</label>
                <input value="{{user.lastName}}" type="text"  name="lastName">
            </div>
        </div>
        <div class="field">
            <label>Email</label>
            <input value="{{user.email}}" type="text" name="email">
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" value="{{user.password}}">
        </div>
        <div class="field">
            <label>Address</label>
            <input type="text" value="{{user.address}}" name="address">
        </div>
        <div class="field">
            <label>Gender</label>
            <input type="radio" name="gender" value="male"> Male<br>
            <input type="radio" name="gender" value="female"> Female<br>
            <input type="radio" name="gender" value="other"> Other          </div>
        <div class="field">
            <label>Height</label>
            <input type="number" name="height" step="any" value="{{user.height}}">
        </div>
        </div>
        <div class="field">
            <label>Starting Weight</label>
            <input type="number" name="weight" step="any" value="{{user.weight}}">
        </div>
        <button class="ui blue submit button">Update</button>
        <a href="/dashboard" class="ui blue"> Cancel </a>

    </form>
</section>
